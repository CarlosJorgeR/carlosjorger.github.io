---
export interface Props {
  left?: boolean;
  center?: boolean;
  right?: boolean;
}
const { center = false, left = false, right = false } = Astro.props;
---

<h2
  class="text-[var(--default-font-color)] text-3xl reveal my-2"
  class:list={[
    { "text-left": left, "text-center": center, "text-right": right },
  ]}
>
  <slot />
</h2>
