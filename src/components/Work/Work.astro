---
import Project from "./Project.astro";
import Subtitle from "../shared/Subtitle.astro";
---

<section id="work">
  <div class="flex flex-col p-4">
    <header>
      <Subtitle left>
        Some projects<br />
        I've made
      </Subtitle>
    </header>

    <Project
      id="open-ecommerce"
      description="OpenEcommerce is an ecommerce builded with .net using a hexagonal architecture, cqrs pattern and other patterns."
      title="OpenEcommerce"
      anchorLabel="See my ecommerce github project"
      githubLink="https://github.com/carlosjorger/openEcommerce"
    />
    <Project
      id="angular-portfolio"
      description="It is a personal portfolio builded with angular using really cool animation (Angular animations)."
      title="Angular Portfolio"
      anchorLabel="See my portfolio github project"
      githubLink="https://github.com/carlosjorger/portfolio"
    />
    <Project
      id="online-cv-maker"
      description="An online cv maker made in astro using vuejs components."
      title="Online CV Maker"
      anchorLabel="See my portfolio github project"
      githubLink="https://github.com/carlosjorger/astro-vue-online-cv-maker"
    />
  </div>
</section>
