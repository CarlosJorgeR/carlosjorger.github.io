---
import Link from './Link.astro';
export interface Props {
	href: string;
	label: string;
}
const { href, label } = Astro.props;
---

<li
	class="flex w-56 items-center justify-start p-2 transition-colors ease-in-out active:bg-[#241c2d]"
>
	<slot />
	<Link href={href} arialLabel="Go to presentation">
		<h2 class="pl-3 text-3xl">{label}</h2>
	</Link>
</li>
